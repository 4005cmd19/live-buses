<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/needsPermissionsFragment">


    <fragment
        android:id="@+id/mainFragment"
        android:name="com.cmd.myapplication.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main"/>

    <fragment
        android:id="@+id/needsPermissionsFragment"
        android:name="com.cmd.myapplication.NeedsPermissionsFragment"
        android:label="fragment_needs_permissions"
        tools:layout="@layout/fragment_needs_permissions">
        <action
            android:id="@+id/action_needsPermissionsFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>
</navigation>