<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:background="#20ff0000"
    android:minHeight="128dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <com.cmd.myapplication.utils.Tag
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:text="@string/bus_stop_tag" />

        <TextView
            android:id="@+id/stop_name_view"
            style="?textAppearanceTitleLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tag"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/bus_lines_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:constraint_referenced_ids="tag1,tag2,tag3,tag4,tag5"
            app:flow_horizontalGap="4dp"
            app:flow_horizontalStyle="packed"
            app:flow_verticalGap="4dp"
            android:layout_marginTop="8dp"
            app:flow_horizontalAlign="start"
            app:flow_horizontalBias="0"
            app:flow_maxElementsWrap="5"
            app:flow_verticalStyle="packed"
            app:flow_wrapMode="chain"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stop_name_view" />

        <com.cmd.myapplication.utils.Tag
            android:id="@+id/tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Tag.Start"
            app:text="Hello" />

        <com.cmd.myapplication.utils.Tag
            android:id="@+id/tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Tag.Intermediate"
            app:text="Hello2" />

        <com.cmd.myapplication.utils.Tag
            android:id="@+id/tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Tag.Intermediate"

            app:text="Hello2" />

        <com.cmd.myapplication.utils.Tag
            android:id="@+id/tag4"
            android:layout_width="wrap_content"
            style="@style/Tag.Intermediate"
            android:layout_height="wrap_content"
            app:text="Hello2" />

        <com.cmd.myapplication.utils.Tag
            android:id="@+id/tag5"
            android:layout_width="wrap_content"
            style="@style/Tag.End"
            android:layout_height="wrap_content"
            app:text="Hello2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>